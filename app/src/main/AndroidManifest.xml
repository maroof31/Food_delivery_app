<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nevermindapp.newproject1">
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/foodlogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/foodlogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.NewProject1">
        <activity
            android:name=".ui.rest.ProductDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.rest.ProductsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.rest.MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.auth.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false" />
    </application>

</manifest>